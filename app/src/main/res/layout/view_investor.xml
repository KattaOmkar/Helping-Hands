<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/border01"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.5"
            android:text="Shyam has promised to lend 1000"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:id="@+id/investor_promise"
            />





    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:maxLines="1"
            android:paddingLeft="5dp"
            android:text="Returns to shyam are 1075"
            android:gravity="center"
            android:textStyle="italic"
            android:id="@+id/investor_returns"
            android:textColor="@android:color/holo_red_light"
            android:ellipsize="end"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/received"
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_margin="5sp"
            android:layout_weight="0.33"
            android:background="@android:color/holo_blue_dark"
            android:gravity="center"
            android:text="Received"
            android:textColor="@android:color/white" />

        <Button
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:layout_weight="0.33"
            android:gravity="center"
            android:text="Refunded"
            android:background="#CC10"
            android:textColor="@android:color/white"
            android:layout_margin="5sp"
            android:id="@+id/refunded"/>

        <Button
            android:layout_width="101dp"
            android:layout_height="28dp"
            android:gravity="center"
            android:layout_weight="0.33"
            android:textColor="@android:color/white"
            android:text="Info"
            android:layout_margin="5sp"
            android:background="@android:color/holo_orange_light"
            android:id="@+id/info"/>



    </LinearLayout>

</LinearLayout>
